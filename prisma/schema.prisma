// Prisma schema for Semantic Gateway
// Run: npx prisma init
// Then: npx prisma generate
// Then: npx prisma db push

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  stripeCustomerId String? @unique
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  apiKeys       ApiKey[]
  usage         ApiUsage[]
  subscription  Subscription?
}

model ApiKey {
  id        String   @id @default(cuid())
  key       String   @unique
  name      String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  isActive  Boolean  @default(true)
  lastUsed  DateTime?
  
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([key])
}

model ApiUsage {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  url       String
  tokensUsed Int
  processingTimeMs Int
  success   Boolean  @default(true)
  
  createdAt DateTime @default(now())
  
  @@index([userId, createdAt])
}

model Subscription {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  plan      String   // 'free', 'starter', 'pro', 'enterprise'
  status    String   // 'active', 'canceled', 'past_due'
  
  stripeSubscriptionId String? @unique
  stripePriceId        String?
  
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  
  queriesLimit         Int      @default(1000)
  queriesUsed          Int      @default(0)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ── Verified Restaurant Profiles ─────────────────────────────────────────────

model Restaurant {
  id            String   @id @default(cuid())
  slug          String   @unique
  name          String
  websiteUrl    String
  
  // Business identity
  type          String   @default("Restaurant") // Schema.org @type
  cuisine       String?
  priceRange    String?                          // "$", "$$", "$$$", "$$$$"
  description   String?
  imageUrl      String?
  
  // Contact
  phone         String?
  email         String?
  streetAddress String?
  city          String?
  state         String?
  postalCode    String?
  
  // Reputation
  ratingValue   Float?
  reviewCount   Int?
  
  // External links
  reservationUrl String?
  orderUrl       String?
  directionsUrl  String?
  menuUrl        String?
  
  // Verification metadata
  status        String   @default("draft") // draft, verified, published
  lastVerified  DateTime?
  lastAuditScore Int?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  hours          OperatingHours[]
  menuSections   MenuSection[]
  verifiedFields VerifiedField[]

  @@index([slug])
  @@index([status])
}

model OperatingHours {
  id            String     @id @default(cuid())
  restaurantId  String
  restaurant    Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  
  dayOfWeek     String     // "Monday", "Tuesday", etc.
  opens         String     // "11:00"
  closes        String     // "22:00"
  isClosed      Boolean    @default(false)
  label         String?    // "Holiday hours", "Brunch", etc.
  
  @@index([restaurantId])
}

model MenuSection {
  id            String     @id @default(cuid())
  restaurantId  String
  restaurant    Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  
  name          String
  sortOrder     Int        @default(0)
  
  items         MenuItem[]
  
  @@index([restaurantId])
}

model MenuItem {
  id            String      @id @default(cuid())
  sectionId     String
  section       MenuSection @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  
  name          String
  description   String?
  price         Float?
  currency      String      @default("USD")
  dietaryFlags  String[]
  available     Boolean     @default(true)
  sortOrder     Int         @default(0)
  
  @@index([sectionId])
}

model VerifiedField {
  id            String     @id @default(cuid())
  restaurantId  String
  restaurant    Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  
  fieldName     String     // "phone", "hours", "menu", "cuisine", etc.
  provenance    String     // "owner-submitted", "json-ld-extracted", "pdf-parsed", "manual-entry"
  confidence    Float      // 0.0 to 1.0
  lastVerified  DateTime   @default(now())
  notes         String?
  
  @@unique([restaurantId, fieldName])
  @@index([restaurantId])
}